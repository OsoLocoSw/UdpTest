<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <!-- Appenders define the output destination and format -->
    <Appenders>
        <!-- Console Appender writes to the console (System.out) -->
        <Console name="ConsoleAppender" target="SYSTEM_OUT">
            <!-- PatternLayout defines the log message format -->
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>

        <!-- Rolling File Appender writes to a file with rolling policy -->
        <RollingFile name="FileAppender" fileName="./udp_server.log"
            filePattern="logs/app-%d{MM-dd-yyyy}-%i.log.gz">
            <PatternLayout>
                <Pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n</Pattern>
            </PatternLayout>
            <Policies>
                <!-- Roll over daily -->
                <TimeBasedTriggeringPolicy />
                <!-- Roll over if file size exceeds 10 MB -->
                <SizeBasedTriggeringPolicy size="10 MB"/>
            </Policies>
            <DefaultRolloverStrategy max="20"/>
        </RollingFile>
    </Appenders>

    <!-- Loggers control which messages are logged and at what level -->
    <Loggers>
        <!-- A specific logger for a package, set to a certain level (e.g., warn) -->
        <Logger name="com.marples" level="warn">
            <AppenderRef ref="ConsoleAppender"/>
            <AppenderRef ref="FileAppender"/>
        </Logger>

        <!-- A specific logger for a package, set to a certain level (e.g., INFO) -->
        <Logger name="com.marples" level="info">
            <AppenderRef ref="FileAppender"/>
        </Logger>

        <!-- The Root logger catches all messages not caught by other loggers -->
        <!-- The 'level' attribute (e.g., 'error') sets the default minimum severity -->
        <Root level="error">
            <AppenderRef ref="ConsoleAppender"/>
        </Root>
    </Loggers>
</Configuration>
